    <script>
        (function() {
            // UI elements
            const sosBtn = document.getElementById('sosTrigger');
            const alertPlaceholder = document.getElementById('liveAlertPlaceholder');
            const liveTrackPanel = document.getElementById('liveTrackPanel');
            const dangerZonePanel = document.getElementById('dangerZonePanel');
            const fakeCallPanel = document.getElementById('fakeCallPanel');
            const safeStayPanel = document.getElementById('safeStayPanel');
            const callerNameSpan = document.getElementById('callerNameDisplay');

            // feature click items
            document.getElementById('showLiveTrack').addEventListener('click', () => {
                hideAllPanels();
                liveTrackPanel.style.display = 'block';
                showToast('üìç Live tracking started (offline mode) ¬∑ link shareable');
            });
            document.getElementById('showDangerZone').addEventListener('click', () => {
                hideAllPanels();
                dangerZonePanel.style.display = 'block';
                showToast('‚ö†Ô∏è Danger zone map loaded ¬∑ red zones indicated');
            });
            document.getElementById('showFakeCall').addEventListener('click', () => {
                hideAllPanels();
                fakeCallPanel.style.display = 'block';
                showToast('üìû Fake call ready ¬∑ set caller name');
            });
            document.getElementById('showSafeStay').addEventListener('click', () => {
                hideAllPanels();
                safeStayPanel.style.display = 'block';
                showToast('üè® Nearby safe stay ¬∑ trusted residences');
            });
            document.getElementById('shakeFeature').addEventListener('click', () => {
                showToast('üì≥ Shake detected! triggering SOS (simulated)');
                triggerSosMessage('Shake alert');
            });
            document.getElementById('trustedCitizen').addEventListener('click', () => {
                showToast('üë• Alerting trusted citizens via call + login ID');
            });

            // set fake caller name
            document.getElementById('setCallerBtn').addEventListener('click', () => {
                let newName = prompt('Enter fake caller name (e.g., Dad, Sister):', 'Mom üë©');
                if (newName !== null && newName.trim() !== '') {
                    callerNameSpan.innerText = newName;
                    showToast(`Caller set to "${newName}" ¬∑ tap fake call now`);
                }
            });

            // one tap SOS
            sosBtn.addEventListener('click', () => {
                triggerSosMessage('One‚Äëtap SOS');
            });

            function triggerSosMessage(source) {
                // simulate sending SMS + call + trusted citizen alert
                const alertDiv = document.createElement('div');
                alertDiv.className = 'toast-msg';
                alertDiv.innerHTML = `<i class="fas fa-exclamation-circle" style="color:#ff8a8a;"></i> 
                                        <span><strong>${source} activated</strong> ¬∑ SMS sent to 3 emergency contacts ¬∑ auto‚Äëcall started ¬∑ 2 trusted citizens alerted via call (login ID).</span>
                                        <i class="fas fa-times" style="margin-left:auto;" onclick="this.parentElement.remove()"></i>`;
                alertPlaceholder.appendChild(alertDiv);
                // auto remove after 5 sec
                setTimeout(() => { if(alertDiv.parentNode) alertDiv.remove(); }, 6000);

                // also vibrate if supported (prototype)
                if (navigator.vibrate) navigator.vibrate(400);
            }

            // helper hide panels
            function hideAllPanels() {
                liveTrackPanel.style.display = 'none';
                dangerZonePanel.style.display = 'none';
                fakeCallPanel.style.display = 'none';
                safeStayPanel.style.display = 'none';
            }

            // generic toast
            function showToast(msg) {
                const toast = document.createElement('div');
                toast.className = 'toast-msg';
                toast.style.background = '#2d3c5e';
                toast.innerHTML = `<i class="fas fa-info-circle"></i> <span>${msg}</span> <i class="fas fa-times" style="margin-left:auto;" onclick="this.parentElement.remove()"></i>`;
                alertPlaceholder.appendChild(toast);
                setTimeout(() => { if(toast.parentNode) toast.remove(); }, 4000);
            }

            // extra: simulate shake (for demo purpose, just toast)
            // but we already handle via click. good.

            // initially show only live track + hide others? default shown, but we hide danger,fake,safe
            window.onload = function() {
                // start with live visible, others hidden
                liveTrackPanel.style.display = 'block';
                dangerZonePanel.style.display = 'none';
                fakeCallPanel.style.display = 'none';
                safeStayPanel.style.display = 'none';
            };
        })();
    </script>

    <!-- small note for fakecall click outside setter (enable tap on fake call to simulate) -->
    <script>
        // additional demo: simulate fake call answer when clicking the green phone area
        document.addEventListener('click', function(e) {
            if (e.target.closest('.fa-phone.fa-2x')) {
                alert('üì≤ FAKE CALL SCREEN ¬∑ Incoming from ' + (document.getElementById('callerNameDisplay').innerText) + ' (swipe to answer ‚Äî escape)');
            }
        });
        // simulate map tap on danger zone
        document.addEventListener('click', function(e) {
            if (e.target.closest('.red-zone')) {
                alert('üö® Red zone: past incident reports. Safety score low. Consider alternative route.');
            }
        });
        // share link copy simulation
        document.querySelector('.share-link i.fa-copy')?.addEventListener('click', function() {
            alert('üìé Tracking link copied (offline share)');
        });
    </script>
